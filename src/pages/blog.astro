---
import BlogPost from "../components/BlogPost.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const blogPosts = await Astro.glob("../pages/*.md")

const title = "Blog"
---

<BaseLayout pageTitle={title}>
	<ul>
		{blogPosts.map( (post) => <BlogPost url={post.url} header={post.frontmatter.title} description={post.frontmatter.description} ></BlogPost>)}
	</ul>
</BaseLayout>